<?xml version="1.0"?>
<launch>
    <arg name="paused" default="false" doc="Starts gazebo in paused mode" />
    <arg name="gui" default="true" doc="Starts gazebo gui" />
    <arg name="robot_name" default="edo" />

    <!-- startup simulated world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" default="worlds/empty.world"/>
        <arg name="paused" value="$(arg paused)"/>
        <arg name="gui" value="$(arg gui)"/>
    </include>

    <!-- send robot urdf to param server -->
    <include file="$(find edo_gripper)/launch/edo_gripper_dummy_upload.launch">
    </include>

    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.1" respawn="false" output="screen" />

    <include file="$(find edo_gazebo)/launch/controller_utils.launch">
        <arg name="robot_name" value="$(arg robot_name)"/>
    </include>

    <group ns="$(arg robot_name)">
        <rosparam file="$(find edo_gazebo)/controller/arm_controller_edo.yaml" command="load"/>
        <node name="arm_controller_spawner" pkg="controller_manager" type="spawner" args="arm_controller" respawn="false" output="screen"/>
    </group>

</launch>
